{
  "buildCommand": "cd dashboard && npm run vercel-build",
  "outputDirectory": "dashboard/.next",
  "devCommand": "cd dashboard && npm run dev",
  "installCommand": "cd dashboard && npm install",
  "framework": "nextjs",
  "rewrites": [
    { "source": "/(.*)", "destination": "/dashboard/$1" }
  ],
  "env": {
    "NEXT_TELEMETRY_DISABLED": "1",
    "NEXT_EXPERIMENTAL_ROUTING": "1",
    "NEXT_SKIP_CLIENT_MANIFEST": "1",
    "VERCEL": "1"
  },
  "ignoreCommand": "node -e \"if(process.env.VERCEL_GIT_COMMIT_REF !== 'main') process.exit(1)\"",
  "builds": [
    {
      "src": "dashboard",
      "use": "@vercel/next"
    }
  ]
} 